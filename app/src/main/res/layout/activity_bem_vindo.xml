<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capa"
    tools:context=".Bem_Vindo">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="301dp"
        android:layout_height="41dp"
        android:layout_marginBottom="372dp"
        android:fontFamily="@font/galdeano"
        android:text="ALEXANDRIA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="136dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="158dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ruins"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_cdstr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/roboto"
        android:text="NÃ£o tem conta?"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_entrar"
        app:layout_constraintVertical_bias="0.444"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="310dp"
        android:layout_height="58dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/roboto"
        android:text="Entrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <Button
        android:id="@+id/btn_cadastro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="75dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/roboto_black"
        android:text="Cadastre-se"
        android:textAllCaps="false"
        android:textScaleX="1"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_cdstr"
        app:layout_constraintTop_toBottomOf="@+id/btn_entrar"
        tools:ignore="TextSizeCheck" />









</androidx.constraintlayout.widget.ConstraintLayout>